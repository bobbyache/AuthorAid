<Window x:Class="BasicViewModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding ViewTitle}" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Name:" Height="45" FontSize="18" />
            <TextBox Text="{Binding Name}" Height="45" Width="200" FontSize="18" />
            <Button Content="Submit" Margin="0,10" Width="75" HorizontalAlignment="Left" Click="Button_Click" FontSize="18" />
            <Button Content="Change me" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
